<nav>
  <label for="search">Search:</label>
  <input id="search"
      class="users-search"
       type="text"
       name="query"
      value="<%= @query %>">
  <ul class="users">
    <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
    <% end %>
  </ul>
</nav>
